{
  "name": "@stackupfinance/backend",
  "version": "1.7.0",
  "description": "Backend REST API for Stackup",
  "bin": "bin/createNodejsApp.js",
  "main": "src/index.js",
  "repository": "git@github.com:stackupfinance/stackup.git",
  "author": "@stackupfinance",
  "license": "GPL-3.0",
  "private": true,
  "scripts": {
    "build:env": "echo \"$MONGODB_CA_CERT\" > ./ca-certificate.crt",
    "start": "NODE_ENV=production node src/index.js",
    "start:agendash": "agendash --db=$(cat .env | grep MONGODB_URL | sed 's:.*MONGODB_URL=::') --collection=jobs --port=3001",
    "dev": "cross-env NODE_ENV=development nodemon src/index.js",
    "test": "jest -i --colors --verbose --detectOpenHandles",
    "test:watch": "jest -i --watchAll",
    "coverage": "jest -i --coverage",
    "coverage:coveralls": "jest -i --coverage --coverageReporters=text-lcov | coveralls",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check --ignore-path ./.eslintignore '**'",
    "prettier:fix": "prettier --write --ignore-path ./.eslintignore '**'",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:dev:dependencies": "docker-compose -f docker-compose.yml up mongodb",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up"
  },
  "dependencies": {
    "@sentry/node": "^6.19.6",
    "@sentry/tracing": "^6.19.7",
    "@stackupfinance/walletjs": "1.0.0",
    "agenda": "^4.2.1",
    "agendash": "^3.1.0",
    "axios": "^0.27.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "ethers": "^5.6.5",
    "express": "^4.18.1",
    "express-http-proxy": "^1.6.3",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.4.0",
    "helmet": "^5.0.2",
    "http-status": "^1.5.2",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.3",
    "mongoose": "^6.3.3",
    "morgan": "^1.10.0",
    "nanoid": "^3.3.3",
    "nodemailer": "^6.7.5",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "pusher": "^5.0.1",
    "validator": "^13.7.0",
    "winston": "^3.7.2",
    "winston-transport-sentry-node": "^2.3.0",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "coveralls": "^3.1.1",
    "eslint": "^8.13.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-security": "^1.5.0",
    "jest": "^28.1.0",
    "node-mocks-http": "^1.11.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "supertest": "^6.2.3"
  }
}
