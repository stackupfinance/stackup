# Port number
PORT=3000

# URL of the Mongo DB
MONGODB_URL=mongodb://127.0.0.1:27017/stackup

# Queue
QUEUE_DASHBOARD_PASSWORD=queue-dashboard-password

# JWT
# JWT secret key
JWT_SECRET=thisisasamplesecret
# Number of minutes after which an access token expires
JWT_ACCESS_EXPIRATION_MINUTES=30
# Number of days after which a refresh token expires
JWT_REFRESH_EXPIRATION_DAYS=30

# SMTP configuration options for the email service
# For testing, you can use a fake SMTP service like Ethereal: https://ethereal.email/create
SMTP_HOST=email-server
SMTP_PORT=587
SMTP_USERNAME=email-server-username
SMTP_PASSWORD=email-server-password
EMAIL_FROM=support@yourapp.com

# Real-time service configuration
PUSHER_APP_ID=app-id
PUSHER_KEY=key
PUSHER_SECRET=secret
PUSHER_CLUSTER=cluster

# Web 3
# This is a default mnemonic and should not be used outside of local development.
WEB3_MNEMONIC="test test test test test test test test test test test junk"
WEB3_PAYMASTER=0x0000000000000000000000000000000000000000
WEB3_RPC=https://matic-mumbai.chainstacklabs.com
WEB3_USDC=0x2058A9D7613eEE744279e3856Ef0eAda5FCbaA7e
WEB3_USDC_PRICE_FEED=0xd0D5e3DB44DE05E9F294BB0a3bEEaF030DE24Ada

# Analytics
ANALYTICS_URL=https://api.amplitude.com

# Intercom
INTERCOM_IDENTITY_VERIFICATION_SECRET=identity-verification-secret

# Feature flags
FEATURE_FLAG_AIRDROP_USDC=false
FEATURE_FLAG_WHITELIST=false
