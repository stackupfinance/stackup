{
  "name": "@stackupfinance/contracts",
  "version": "1.0.0",
  "private": true,
  "main": "lib/index.js",
  "scripts": {
    "test": "hardhat coverage",
    "test:watch": "hardhat watch test",
    "compile": "hardhat compile",
    "lint": "solhint 'contracts/**/*.sol' && eslint .",
    "lint:fix": "solhint 'contracts/**/*.sol' && eslint . --fix",
    "prettier": "prettier --check --ignore-path ./.eslintignore '**'",
    "prettier:fix": "prettier --write --ignore-path ./.eslintignore '**'",
    "contracts:size": "hardhat clean && hardhat compile && hardhat size-contracts",
    "deploy:hardhat": "hardhat run --network hardhat scripts/deploy.js",
    "deploy:polygonTestnet": "hardhat run --network polygonTestnet scripts/deploy.js",
    "deploy:polygonMainnet": "hardhat run --network polygonMainnet scripts/deploy.js",
    "paymaster:addStake:polygonTestnet": "hardhat run --network polygonTestnet scripts/paymaster/addStake.js",
    "paymaster:getStake:polygonTestnet": "hardhat run --network polygonTestnet scripts/paymaster/getStake.js"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "eslint": "^8.4.0",
    "eslint-config-prettier": "^8.3.0",
    "ethereum-waffle": "^3.4.0",
    "hardhat": "^2.7.0",
    "hardhat-contract-sizer": "^2.1.1",
    "hardhat-watcher": "^2.1.1",
    "prettier": "2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.18",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.17"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.2.2",
    "@openzeppelin/contracts": "^4.4.0",
    "@openzeppelin/contracts-upgradeable": "^4.4.0",
    "ethers": "^5.5.2",
    "solidity-bytes-utils": "^0.8.0"
  }
}
