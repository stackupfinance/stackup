{
  "name": "@stackupfinance/contracts",
  "version": "1.0.0",
  "private": true,
  "main": "lib/index.js",
  "scripts": {
    "build:env": "./scripts/buildenv.sh",
    "test": "NODE_ENV=test hardhat test",
    "test:cov": "NODE_ENV=test hardhat coverage",
    "test:watch": "node testWatcher.js",
    "compile": "hardhat clean && hardhat compile",
    "lint": "solhint 'contracts/**/*.sol' && eslint . && tsc --noEmit",
    "lint:fix": "solhint 'contracts/**/*.sol' && eslint . --fix",
    "prettier": "prettier --check --ignore-path ./.eslintignore '**'",
    "prettier:fix": "prettier --write --ignore-path ./.eslintignore '**'",
    "benchmark": "yarn benchmark:bytecode && yarn benchmark:gas",
    "benchmark:gas": "hardhat run ./scripts/benchmark/benchmark-gas.ts",
    "benchmark:bytecode": "hardhat run ./scripts/benchmark/benchmark-bytecode.ts",
    "contracts:size": "hardhat clean && hardhat compile && hardhat size-contracts",
    "contracts:updateLib": "hardhat clean && hardhat run scripts/contracts/updateLib.ts",
    "deploy:mumbai:entryPoint": "hardhat run --network mumbai scripts/deploy/entryPoint.ts",
    "deploy:polygon:entryPoint": "hardhat run --network polygon scripts/deploy/entryPoint.ts",
    "deploy:mumbai:wallet": "hardhat run --network mumbai scripts/deploy/wallet.ts",
    "deploy:polygon:wallet": "hardhat run --network polygon scripts/deploy/wallet.ts",
    "paymaster:mumbai:getAddress": "hardhat run --network mumbai scripts/paymaster/getAddress.ts",
    "paymaster:polygon:getAddress": "hardhat run --network polygon scripts/paymaster/getAddress.ts",
    "paymaster:mumbai:addStake": "hardhat run --network mumbai scripts/paymaster/addStake.ts",
    "paymaster:polygon:addStake": "hardhat run --network polygon scripts/paymaster/addStake.ts",
    "paymaster:mumbai:getStake": "hardhat run --network mumbai scripts/paymaster/getStake.ts",
    "paymaster:polygon:getStake": "hardhat run --network polygon scripts/paymaster/getStake.ts",
    "paymaster:mumbai:updateImplementation": "hardhat run --network mumbai scripts/paymaster/updateImplementation.ts",
    "paymaster:polygon:updateImplementation": "hardhat run --network polygon scripts/paymaster/updateImplementation.ts",
    "verify:mumbai": "hardhat verify --network mumbai",
    "verify:polygon": "hardhat verify --network polygon"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.1.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.6.1",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "chai": "^4.3.6",
    "chokidar": "^3.5.3",
    "decimal.js": "^10.3.1",
    "dotenv": "^16.0.1",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "ethereum-waffle": "^3.4.4",
    "hardhat": "^2.10.1",
    "hardhat-contract-sizer": "^2.6.1",
    "mocha": "^10.0.0",
    "prettier": "2.7.1",
    "prettier-plugin-solidity": "^1.0.0-dev.23",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.4.1",
    "@openzeppelin/contracts": "^4.6.0",
    "@openzeppelin/contracts-upgradeable": "^4.7.1",
    "@stackupfinance/walletjs": "1.0.0",
    "ethers": "^5.6.9",
    "solidity-bytes-utils": "^0.8.0"
  }
}
