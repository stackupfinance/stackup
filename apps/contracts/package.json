{
  "name": "@stackupfinance/contracts",
  "version": "1.0.0",
  "private": true,
  "main": "lib/index.js",
  "scripts": {
    "test": "NODE_ENV=test hardhat test",
    "test:cov": "NODE_ENV=test hardhat coverage",
    "test:watch": "node testWatcher.js",
    "compile": "hardhat compile",
    "lint": "solhint 'contracts/**/*.sol' && eslint .",
    "lint:fix": "solhint 'contracts/**/*.sol' && eslint . --fix",
    "prettier": "prettier --check --ignore-path ./.eslintignore '**'",
    "prettier:fix": "prettier --write --ignore-path ./.eslintignore '**'",
    "contracts:size": "hardhat clean && hardhat compile && hardhat size-contracts",
    "contracts:updateLib": "hardhat clean && hardhat run scripts/contracts/updateLib.js",
    "deploy:hardhat:entryPoint": "hardhat run --network hardhat scripts/deploy/entryPoint.js",
    "deploy:mumbai:entryPoint": "hardhat run --network mumbai scripts/deploy/entryPoint.js",
    "deploy:hardhat:wallet": "hardhat run --network hardhat scripts/deploy/wallet.js",
    "deploy:mumbai:wallet": "hardhat run --network mumbai scripts/deploy/wallet.js",
    "paymaster:mumbai:getAddress": "hardhat run --network mumbai scripts/paymaster/getAddress.js",
    "paymaster:mumbai:addStake": "hardhat run --network mumbai scripts/paymaster/addStake.js",
    "paymaster:mumbai:getStake": "hardhat run --network mumbai scripts/paymaster/getStake.js",
    "paymaster:mumbai:updateImplementation": "hardhat run --network mumbai scripts/paymaster/updateImplementation.js",
    "verify:mumbai:wallet": "hardhat verify --network mumbai"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "chai": "^4.3.6",
    "chokidar": "^3.5.3",
    "dotenv": "^16.0.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "ethereum-waffle": "^3.4.0",
    "hardhat": "^2.9.1",
    "hardhat-contract-sizer": "^2.5.0",
    "mocha": "^9.2.1",
    "prettier": "2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.18",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.20",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.4.0",
    "@openzeppelin/contracts": "^4.5.0",
    "@openzeppelin/contracts-upgradeable": "^4.5.2",
    "crypto-js": "^4.1.1",
    "eth-crypto": "^2.2.0",
    "ethers": "^5.5.4",
    "scrypt-js": "^3.0.1",
    "solidity-bytes-utils": "^0.8.0"
  }
}
